pipeline {
    agent { 
        node {
            label 'docker-agent-python'
        }
    }
    triggers {
        pollSCM('* * * * *')  // Polling can be disabled if unnecessary
    }
    stages {
        stage('Build') {
            steps {
                echo "No build step necessary for Hello World."
            }
        }
        stage('Test') {
            steps {
                echo "Testing Hello World Python script.."
                sh '''
                cd myapp
                python3 helloworld.py     # Run helloworld.py
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'No delivery steps required for Hello World script.'
            }
        }
    }
}
